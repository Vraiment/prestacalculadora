html{
  background: #1abc9c;
}

body{
  background: transparent;
  font-family: 'Muli', sans-serif !important;
  color: #34495e !important;
}

h1,h2,h3,h4,h5{
  font-family: 'Raleway', sans-serif;
}

h1{
  color: #ffffff;
  text-shadow: 1px 1px #2c3e50;
}

h3{
  color: #f1c40f;
  text-shadow: 1px 1px #34495e;
}

.font-logo{
  color: #ffffff;
  text-shadow: 1px 1px #2c3e50;
}

.btn{
  border-radius: 0px;
  color: #34495e !important;
}

.wrap-content{
  background: url(<%= asset_path('bg-prestacalculadora.png') %>);
  padding: 20px;
  border-radius: 0px;
}

.payment-info{
  text-shadow: 1px 1px #fff;
  color: #34495e;
}

.loan-info{
  background: rgba(255,255,255,.5);
  padding-top: 15px;
}

.buttons-loan{
  margin-top: 15px;
}

.muli-font{
  font-family: 'Muli', sans-serif !important;
}

.form-control{
  border-radius: 0px;
}

.anchor-non-style:hover{
  text-decoration: none;
}

.form-control:focus {
  border-color: #1abc9c;
  border-width: 2px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.0), 0 0 8px rgba(255, 0, 0, 0.0);
}

hr.prestacalculadora {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.75), rgba(255, 255, 255, 0));
}
